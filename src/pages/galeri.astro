---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Galeri" description="Galeri Sayfası">
  <section class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold text-center mb-8 text-white">Galeri</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <img src="/galeri/roket1.jpg" alt="Roket 1" class="w-full h-64 object-cover rounded-lg shadow-md hover:scale-105 transition-transform duration-300" />
      <img src="/galeri/roket2.jpg" alt="Roket 2" class="w-full h-64 object-cover rounded-lg shadow-md hover:scale-105 transition-transform duration-300" />
      <img src="/galeri/takim.jpg" alt="Takım" class="w-full h-64 object-cover rounded-lg shadow-md hover:scale-105 transition-transform duration-300" />
    </div>
  </section>
</Layout>
