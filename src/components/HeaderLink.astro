---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href = "#", class: className = "", ...rest } = Astro.props as Props;
const current = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const isActive =
  href === "/"
    ? current === "" || current === "/"
    : current.startsWith(href.replace(/^\//, ""));
---

<a
  href={href}
  class:list={[
    "inline-block no-underline px-3 py-2 transition-opacity",
    isActive
      ? "font-semibold underline underline-offset-4"
      : "opacity-80 hover:opacity-100",
    className,
  ]}
  {...rest}
>
  <slot />
</a>
